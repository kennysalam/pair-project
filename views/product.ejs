<!DOCTYPE html>
<html>
  <head>
    <title>SKINCARE</title>
    <style>
        body {text-align: center;}
        img {max-height: 100px;}
        table {width: 100%;}
        tr, th, td {border: 1px solid black; padding: 5px;}
    </style>
  </head>
  <body>
    <h1>PRODUCT LIST</h1>
    <p>
        <a href="/">HOME</a> | <a href="/product">PRODUCT</a> | <a href="/user/register">REGISTER</a>
    </p>
    <table>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Skin type</th>
            <th>Price</th>
        </tr>
        <% for (let objProduct of allProduct) { %>
            <tr>
                <td><img src="<%= objProduct.img_link %>"></td>
                <td><%= objProduct.name %></td>
                <td><%= objProduct.skin_type %></td>
                <td><%= objProduct.price %></td>
            </tr>
        <% } %>
    </table>
  </body>
</html>