<!DOCTYPE html>
<html>
  <head>
    <title>SKINCARE</title>
    <style>
        body {text-align: center;}
        img {max-height: 100px;}
        table {width: 100%;}
        tr, th, td {border: 1px solid black; padding: 5px;}
    </style>
  </head>
  <body>
    <h1>Checkout Page</h1>
    <p>
        <%- include('./partial/navbarYesUser') %>
    </p>

    <h3>
        Name: <%= data.name %><br><br>
        Email: <%= data.email %><br><br>
        Address: <%= data.address %><br>
    </h3>
        <table>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Action</th>
                <th>Price</th>
            </tr>
            <% for (let objProduct of data.getDataValue("Products")) { %>
                <tr>
                    <td><img src="<%= objProduct.img_link %>"></td>
                    <td><%= objProduct.name %></td>
                    <td><a href="/user/<%= data.id %>/checkout/remove/<%= objProduct.id %>">Remove from cart</a></td>
                    <td><%= objProduct.priceEdit() %></td>
                </tr>
            <% } %>
            <tr>
                <td colspan="3">Total Price:</td>
                <td><%= totalPrice %></td>
            </tr>
        </table>
        <br><br>
        <a href="/user/<%= data.id %>/finalize">Finalize Purchase</a><br><br>
    </form>
  </body>
</html>